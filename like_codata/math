! useful for defining small numbers (e.g. convergence tolerances)
        eps04  = 1.0e-4_dbl_kind, &
        eps13  = 1.0e-13_dbl_kind, &
        eps16  = 1.0e-16_dbl_kind

! ------------------------------------------------------
! derived constants:
         p333 = c1/c3, &
         p666 = c2/c3, &
        p111 = c1/c9, &
        p166 = c1/c6, &
        p222 = c2/c9, &
        p333 = c1/c3, &
        p666 = c2/c3, &




